{
  "name": "tix-frontend",
  "private": true,
  "scripts": {
    "dev:customer": "pnpm --filter customer-portal dev",
    "dev:agent": "pnpm --filter agent-portal dev",
    "build:customer": "pnpm --filter customer-portal build",
    "build:agent": "pnpm --filter agent-portal build",
    "build": "pnpm build:customer && pnpm build:agent",
    "codegen": "pnpm --filter @tix/graphql codegen",
    "lint": "eslint . --ext .vue,.ts,.tsx",
    "lint:fix": "eslint . --ext .vue,.ts,.tsx --fix",
    "typecheck": "vue-tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{vue,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "vue": "^3.4.15"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vitest/coverage-v8": "^1.2.0",
    "@vue/test-utils": "^2.4.4",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.56.0",
    "eslint-plugin-vue": "^9.21.0",
    "happy-dom": "^13.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0",
    "vue-toastification": "2.0.0-rc.5",
    "vue-tsc": "^2.0.0"
  }
}
